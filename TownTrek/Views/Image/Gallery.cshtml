@model TownTrek.Models.ViewModels.ImageGalleryViewModel

@{
    ViewData["Title"] = "Image Gallery";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Scripts {
    <script src="~/js/image-gallery.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/features/image-gallery/gallery.css" asp-append-version="true" />
}

<!-- Page Header -->
<div class="page-header" 
     data-business-id="@Model.BusinessId" 
     data-max-file-size="@Model.MaxFileSizeBytes" 
     data-allowed-types="@Html.Raw(Json.Serialize(Model.AllowedFileTypes))">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Image Gallery</h1>
            <p class="page-description">Manage images for your business listing</p>
        </div>
        <div class="page-actions">
            <a asp-controller="Business" asp-action="ManageBusinesses" class="auth-btn auth-btn-secondary">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Businesses
            </a>
        </div>
    </div>
</div>

<!-- Upload Section -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Upload Images</h3>
        <p class="admin-card-description">
            Upload business logo and gallery images. Maximum file size: @((Model.MaxFileSizeBytes / (1024 * 1024)).ToString("F1"))MB
        </p>
    </div>
    
    <div class="admin-card-body">
        <!-- Logo Upload -->
        <div class="form-section">
            <div class="form-section-header">
                <h4 class="form-section-title">
                    <span class="step-number">1</span>
                    Business Logo
                </h4>
                <p class="form-section-description">Upload your business logo to represent your brand</p>
            </div>
            <div class="form-grid">
                @if (Model.Logo != null)
                {
                    <div class="form-group form-group-full">
                        <div class="current-logo">
                            <img src="@Model.Logo.ImageUrl" alt="Current Logo" class="logo-preview" />
                            <div class="logo-actions">
                                <button type="button" class="auth-btn auth-btn-danger" data-action="delete" data-image-id="@Model.Logo.Id">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Replace Logo
                                </button>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="form-group form-group-full">
                        <div class="image-upload-area" id="logoUploadArea">
                            <input type="file" id="logoUpload" accept="@string.Join(",", Model.AllowedFileTypes)" />
                            <div class="upload-content">
                                <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="upload-icon">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                </svg>
                                <p class="upload-title"><strong>Click to upload</strong> or drag and drop your logo</p>
                                <p class="upload-subtitle">PNG, JPG, GIF up to @((Model.MaxFileSizeBytes / (1024 * 1024)).ToString("F1"))MB</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Gallery Upload -->
        <div class="form-section">
            <div class="form-section-header">
                <h4 class="form-section-title">
                    <span class="step-number">2</span>
                    Gallery Images
                </h4>
                <p class="form-section-description">Upload multiple images to showcase your business</p>
            </div>
            <div class="form-grid">
                <div class="form-group form-group-full">
                    <div class="image-upload-area" id="galleryUploadArea">
                        <input type="file" id="galleryUpload" accept="@string.Join(",", Model.AllowedFileTypes)" multiple />
                        <div class="upload-content">
                            <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="upload-icon">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="upload-title"><strong>Click to upload</strong> or drag and drop gallery images</p>
                            <p class="upload-subtitle">Select multiple images. PNG, JPG, GIF up to @((Model.MaxFileSizeBytes / (1024 * 1024)).ToString("F1"))MB each</p>
                        </div>
                    </div>
                    
                    <div class="upload-progress">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar"></div>
                        </div>
                        <p class="progress-text">Uploading images...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Current Images -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Current Images</h3>
        <p class="admin-card-description">@Model.AllImages.Count images uploaded</p>
    </div>
    
    <div class="admin-card-body">
        @if (Model.AllImages.Any())
        {
            <div class="image-grid" id="imageGrid">
                @foreach (var image in Model.AllImages.OrderBy(i => i.DisplayOrder).ThenBy(i => i.UploadedAt))
                {
                    <div class="image-card" data-image-id="@image.Id">
                        <img src="@(image.ThumbnailUrl ?? image.ImageUrl)" alt="@image.AltText" />
                        <div class="image-card-body">
                            <div class="image-card-title">@image.OriginalFileName</div>
                            <div class="image-card-meta">
                                @image.ImageType â€¢ @((image.FileSize / 1024).ToString("N0")) KB
                            </div>
                            <div class="image-card-actions">
                                <button type="button" class="auth-btn auth-btn-sm auth-btn-primary" data-action="edit" data-image-id="@image.Id">
                                    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Edit
                                </button>
                                <button type="button" class="auth-btn auth-btn-sm auth-btn-danger" data-action="delete" data-image-id="@image.Id">
                                    <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="empty-state-icon">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="empty-state-title">No Images Uploaded</h3>
                <p class="empty-state-description">Upload your business logo and gallery images to showcase your business.</p>
            </div>
        }
    </div>
</div>