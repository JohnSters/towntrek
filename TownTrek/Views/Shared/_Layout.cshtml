<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TownTrek</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Public Entrypoint (consolidated imports) -->
    <link rel="stylesheet" href="~/css/entrypoints/public.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components/navigation.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TownTrek.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
    
    <style>
        /* Dashboard button styles for home page */
        .btn-outline-primary, .btn-outline-success {
            display: inline-flex;
            align-items: center;
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.375rem;
            text-decoration: none;
            transition: all 0.15s ease-in-out;
            border: 1px solid;
        }
        
        .btn-outline-primary {
            color: #0d6efd;
            border-color: #0d6efd;
        }
        
        .btn-outline-primary:hover {
            color: #fff;
            background-color: #0d6efd;
            border-color: #0d6efd;
            text-decoration: none;
        }
        
        .btn-outline-success {
            color: #198754;
            border-color: #198754;
        }
        
        .btn-outline-success:hover {
            color: #fff;
            background-color: #198754;
            border-color: #198754;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>TownTrek</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Public" asp-action="Index">Explore</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#pricing">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Show Dashboard button for authenticated users -->
                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Admin" asp-action="Dashboard" style="margin-right: 0.5rem;">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin-right: 0.25rem;">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                                    </svg>
                                    Dashboard
                                </a>
                            }
                            else if (User.IsInRole("Client-Basic") || User.IsInRole("Client-Standard") || User.IsInRole("Client-Premium") || User.IsInRole("Client-Trial"))
                            {
                                <a class="btn btn-outline-success" asp-area="" asp-controller="Client" asp-action="Dashboard" style="margin-right: 0.5rem;">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="margin-right: 0.25rem;">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                    </svg>
                                    @if (User.IsInRole("Client-Trial"))
                                    {
                                        <span>Trial Dashboard</span>
                                    }
                                    else
                                    {
                                        <span>Dashboard</span>
                                    }
                                </a>
                            }
                            @await Html.PartialAsync("_TopUserMenu")
                        }
                        else
                        {
                            <!-- Show login/register for non-authenticated users -->
                            <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Login" style="margin-right: 1rem;">Sign In</a>
                            <a class="btn btn-primary" asp-area="" asp-controller="Auth" asp-action="Register" style="margin-left: 0.5rem;">Join TownTrek</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-error">
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                @TempData["ErrorMessage"]
            </div>
        }

        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div>
                    <h5>TownTrek</h5>
                    <p>
                        Connecting South African communities with local businesses. 
                        Discover shops, restaurants, markets, and services across South Africa's vibrant small towns.
                    </p>
                    <div style="margin-top: var(--space-lg);">
                        <span style="font-size: var(--body-xs); opacity: 0.7;">🇿🇦 Proudly South African</span>
                    </div>
                </div>
                <div>
                    <h6>Quick Links</h6>
                    <ul>
                        <li><a href="/#features">Features</a></li>
                        <li><a href="/#pricing">Pricing</a></li>
                        <li><a asp-area="" asp-controller="Auth" asp-action="Register">Get Started</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Download">Mobile App</a></li>
                        <li><a href="/#business-owners">For Business</a></li>
                    </ul>
                </div>
                <div>
                    <h6>Legal & Support</h6>
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Terms">Terms of Service</a></li>
                        <li><a href="mailto:support@TownTrek.co.za">Support</a></li>
                        <li><a href="mailto:hello@TownTrek.co.za">Contact Us</a></li>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="footer-bottom">
                &copy; 2025 TownTrek. All rights reserved. Made with ❤️ for South African communities.
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- TownTrek Core JavaScript -->
    <script src="~/js/core/config.js" asp-append-version="true"></script>
    <script src="~/js/core/utils.js" asp-append-version="true"></script>
    <script src="~/js/core/error-handler.js" asp-append-version="true"></script>
    <script src="~/js/core/api-client.js" asp-append-version="true"></script>
    <script src="~/js/core/notifications.js" asp-append-version="true"></script>
    <script src="~/js/core/validation.js" asp-append-version="true"></script>
    <!-- UI components -->
    <script src="~/js/components/modal.js" asp-append-version="true"></script>
    <script src="~/js/components/user-menu.js" asp-append-version="true"></script>
    <script src="~/js/modules/auth/auth-manager.js" asp-append-version="true"></script>
    <script src="~/js/core/app.js" asp-append-version="true"></script>
    <!-- Member module loaded per-page via sections to avoid double init -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @Html.AntiForgeryToken()
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
