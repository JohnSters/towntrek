@model TownTrek.Models.ViewModels.AddBusinessViewModel

<div id="eventSection" class="form-section category-section" style="display: none;">
    <div class="form-section-header">
        <h4 class="form-section-title">
            <span class="step-number">6</span>
            Event Details
        </h4>
        <p class="form-section-description">Information about your event</p>
    </div>
    
    <div class="form-grid">
        <div class="form-group">
            <label for="eventType" class="form-label">Event Type</label>
            <select id="eventType" name="EventType" class="form-select">
                <option value="">Select event type</option>
                <option value="festival" selected="@(Model.EventType == "festival")">Festival</option>
                <option value="concert" selected="@(Model.EventType == "concert")">Concert</option>
                <option value="workshop" selected="@(Model.EventType == "workshop")">Workshop</option>
                <option value="conference" selected="@(Model.EventType == "conference")">Conference</option>
                <option value="exhibition" selected="@(Model.EventType == "exhibition")">Exhibition</option>
                <option value="sports" selected="@(Model.EventType == "sports")">Sports Event</option>
                <option value="market" selected="@(Model.EventType == "market")">Market Event</option>
                <option value="cultural" selected="@(Model.EventType == "cultural")">Cultural Event</option>
            </select>
        </div>

        <div class="form-group">
            <label for="eventStartDate" class="form-label required">Event Start Date</label>
            <input type="date" id="eventStartDate" name="EventStartDate" class="form-input" value="@Model.EventStartDate?.ToString("yyyy-MM-dd")" required>
        </div>

        <div class="form-group">
            <label for="eventEndDate" class="form-label">Event End Date</label>
            <input type="date" id="eventEndDate" name="EventEndDate" class="form-input" value="@Model.EventEndDate?.ToString("yyyy-MM-dd")">
            <span class="form-help">Leave blank for single-day events</span>
        </div>

        <div class="form-group">
            <label for="eventStartTime" class="form-label">Start Time</label>
            <input type="time" id="eventStartTime" name="EventStartTime" class="form-input" value="@Model.EventStartTime">
        </div>

        <div class="form-group">
            <label for="eventEndTime" class="form-label">End Time</label>
            <input type="time" id="eventEndTime" name="EventEndTime" class="form-input" value="@Model.EventEndTime">
        </div>

        <div class="form-group">
            <label for="maxAttendees" class="form-label">Maximum Attendees</label>
            <input type="number" id="maxAttendees" name="MaxAttendees" class="form-input" min="1" value="@Model.MaxAttendees">
        </div>

        <div class="form-group form-group-full">
            <label for="venue" class="form-label">Venue Name</label>
            <input type="text" id="venue" name="Venue" class="form-input" placeholder="Name of the venue" value="@Model.Venue">
        </div>

        <div class="form-group form-group-full">
            <label for="venueAddress" class="form-label">Venue Address</label>
            <input type="text" id="venueAddress" name="VenueAddress" class="form-input" placeholder="Full address of the venue" value="@Model.VenueAddress">
        </div>

        <div class="form-group form-group-full">
            <label for="ticketInfo" class="form-label">Ticket Information</label>
            <textarea id="ticketInfo" name="TicketInfo" class="form-textarea" rows="3" placeholder="Ticket prices, where to buy, booking information...">@Model.TicketInfo</textarea>
        </div>

        <div class="form-group form-group-full">
            <label class="form-label">Event Features</label>
            <div class="checkbox-group">
                <label class="checkbox-item">
                    <input type="checkbox" name="IsFreeEvent" value="true" class="service-checkbox" checked="@Model.IsFreeEvent">
                    <span class="checkbox-label">Free Event</span>
                </label>
                <label class="checkbox-item">
                    <input type="checkbox" name="IsOutdoorEvent" value="true" class="service-checkbox" checked="@Model.IsOutdoorEvent">
                    <span class="checkbox-label">Outdoor Event</span>
                </label>
                <label class="checkbox-item">
                    <input type="checkbox" name="HasParking" value="true" class="service-checkbox" checked="@Model.HasParking">
                    <span class="checkbox-label">Parking Available</span>
                </label>
                <label class="checkbox-item">
                    <input type="checkbox" name="RequiresBooking" value="true" class="service-checkbox" checked="@Model.RequiresBooking">
                    <span class="checkbox-label">Requires Booking</span>
                </label>
            </div>
        </div>
    </div>
</div>