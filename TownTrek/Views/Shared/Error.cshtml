@using TownTrek.Models.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = Model?.Title ?? "Error";
}

<div class="error-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="error-content text-center">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h1 class="error-title mb-3">@(Model?.Title ?? "Error")</h1>
                    <p class="error-message mb-4">@(Model?.Message ?? "An error occurred while processing your request.")</p>
                    
                    <div class="error-actions mb-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                            <i class="fas fa-home me-1"></i> Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Go Back
                        </button>
                    </div>

                    @if (Model?.ShowRequestId == true)
                    {
                        <div class="error-details">
                            <p class="text-muted small">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        </div>
                    }

                    @if (Model?.ShowDetails == true && !string.IsNullOrEmpty(Model.Details))
                    {
                        <div class="error-debug mt-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Debug Information</h5>
                                    <small class="text-muted">This information is only shown in development mode</small>
                                </div>
                                <div class="card-body">
                                    <pre class="text-start"><code>@Model.Details</code></pre>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        min-height: 60vh;
        display: flex;
        align-items: center;
        padding: 2rem 0;
    }
    
    .error-content {
        padding: 2rem;
    }
    
    .error-title {
        color: #dc3545;
        font-weight: 600;
    }
    
    .error-message {
        color: #6c757d;
        font-size: 1.1rem;
    }
    
    .error-debug pre {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1rem;
        max-height: 400px;
        overflow-y: auto;
        font-size: 0.875rem;
    }
</style>
