@{
    ViewData["Title"] = "Reset Password - TownTrek";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Reset Your Password</h1>
            <p>Enter your email address and we'll send you a link to reset your password</p>
        </div>

        <form class="auth-form" id="forgotPasswordForm" method="post" asp-action="ForgotPassword">
            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input" 
                    placeholder="your@email.com"
                    required
                    autocomplete="email"
                />
            </div>

            <button type="submit" class="auth-btn auth-btn-primary">
                Send Reset Link
            </button>
        </form>

        <div class="auth-links">
            <p style="color: var(--dark-gray); margin-bottom: var(--space-md);">
                Remember your password? 
                <a asp-area="" asp-controller="Auth" asp-action="Login" class="auth-link">Sign in here</a>
            </p>
            <p>
                Don't have an account? 
                <a asp-area="" asp-controller="Auth" asp-action="Register" class="auth-link">Join TownTrek today</a>
            </p>
        </div>
    </div>
</div>

