@model List<TownTrek.Models.Business>
@{
    ViewData["Title"] = "My Businesses";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/components/modal.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/confirmation-modal.js" asp-append-version="true"></script>
    <script>
        function confirmDeleteBusiness(businessName, businessId) {
            showConfirmationModal({
                title: 'Delete Business',
                message: `Are you sure you want to delete "${businessName}"?`,
                details: 'This action cannot be undone. The business will be permanently removed.',
                confirmText: 'Delete',
                cancelText: 'Cancel',
                iconType: 'danger',
                confirmButtonType: 'danger',
                formAction: '/Client/DeleteBusiness',
                formMethod: 'post',
                formData: { id: businessId }
            });
        }
    </script>
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">My Businesses</h1>
            <p class="page-description">Manage your business listings and track their performance.</p>
        </div>
        <div class="page-actions">
            @if (ViewBag.UserLimits is SubscriptionLimits limits)
            {
                @if (limits.MaxBusinesses == -1 || limits.CurrentBusinessCount < limits.MaxBusinesses)
                {
                    <a asp-controller="Business" asp-action="AddBusiness" class="auth-btn auth-btn-cta">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Add New Business
                    </a>
                }
                else
                {
                    <a asp-controller="Subscription" asp-action="Index" class="auth-btn auth-btn-secondary">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Upgrade Plan
                    </a>
                }
            }
        </div>
    </div>
</div>

<!-- Business Statistics -->
<div class="stats-grid" style="grid-template-columns: repeat(4, 1fr); margin-bottom: 2rem;">
    <div class="stat-card">
        <div class="stat-icon primary">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.Count</div>
        <div class="stat-label">Total Businesses</div>
        @if (ViewBag.UserLimits is SubscriptionLimits userLimits)
        {
            <div class="stat-change">@userLimits.CurrentBusinessCount/@(userLimits.MaxBusinesses == -1 ? "âˆž" : userLimits.MaxBusinesses.ToString()) used</div>
        }
    </div>

    <div class="stat-card">
        <div class="stat-icon success">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.Count(b => b.Status == "Active")</div>
        <div class="stat-label">Active Listings</div>
        <div class="stat-change positive">Live & visible</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon warning">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.Count(b => b.Status == "Pending")</div>
        <div class="stat-label">Pending Review</div>
        <div class="stat-change">Awaiting approval</div>
    </div>

    <div class="stat-card">
        <div class="stat-icon info">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.Sum(b => b.ViewCount)</div>
        <div class="stat-label">Total Views</div>
        <div class="stat-change">All time</div>
    </div>
</div>

<!-- Businesses Table -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Your Business Listings</h3>
        <div class="admin-card-actions">
            <button class="header-btn" title="Filter">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
            </button>
            <button class="header-btn" title="Refresh">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </button>
        </div>
    </div>
    
    @if (Model.Any())
    {
        <div class="table-container">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Business Name</th>
                        <th>Category</th>
                        <th>Town</th>
                        <th>Status</th>
                        <th>Views</th>
                        <th>Rating</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var business in Model)
                    {
                        <tr>
                            <td>
                                <div class="table-cell-content">
                                    <div class="table-cell-title">@business.Name</div>
                                    @if (!string.IsNullOrEmpty(business.ShortDescription))
                                    {
                                        <div class="table-cell-subtitle">@business.ShortDescription.Substring(0, Math.Min(60, business.ShortDescription.Length))@(business.ShortDescription.Length > 60 ? "..." : "")</div>
                                    }
                                    <div class="table-cell-subtitle">
                                        <strong>Phone:</strong> @business.PhoneNumber
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="category-info">
                                    <div class="category-main">@business.Category</div>
                                    @if (!string.IsNullOrEmpty(business.SubCategory))
                                    {
                                        <div class="category-sub">@business.SubCategory</div>
                                    }
                                </div>
                            </td>
                            <td>@business.Town.Name</td>
                            <td>
                                @switch (business.Status)
                                {
                                    case "Active":
                                        <span class="badge badge-success">Active</span>
                                        break;
                                    case "Pending":
                                        <span class="badge badge-warning">Pending</span>
                                        break;
                                    case "Inactive":
                                        <span class="badge badge-secondary">Inactive</span>
                                        break;
                                    case "Suspended":
                                        <span class="badge badge-danger">Suspended</span>
                                        break;
                                    default:
                                        <span class="badge badge-secondary">@business.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                <span class="badge badge-info">@business.ViewCount</span>
                            </td>
                            <td>
                                @if (business.Rating.HasValue)
                                {
                                    <div class="rating-display">
                                        <span class="rating-value">@business.Rating.Value.ToString("F1")</span>
                                        <div class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                @if (i <= business.Rating.Value)
                                                {
                                                    <svg class="star filled" width="12" height="12" fill="currentColor" viewBox="0 0 24 24">
                                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg class="star" width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                                    </svg>
                                                }
                                            }
                                        </div>
                                        <span class="review-count">(@business.TotalReviews)</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">No reviews</span>
                                }
                            </td>
                            <td>@business.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="table-actions">
                                    <a href="@Url.Action("EditBusiness", "Business", new { id = business.Id })" class="table-action-btn primary" title="Edit">
                                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <a href="@Url.Action("Gallery", "Image", new { businessId = business.Id })" class="table-action-btn info" title="Manage Images">
                                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </a>
                                    <button class="table-action-btn danger" title="Delete" onclick="confirmDeleteBusiness('@business.Name', '@business.Id')">
                                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="empty-state-icon">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <h3 class="empty-state-title">No Businesses Found</h3>
            <p class="empty-state-description">Get started by adding your first business listing to connect with customers in your area.</p>
            @if (ViewBag.UserLimits is SubscriptionLimits emptyLimits && (emptyLimits.MaxBusinesses == -1 || emptyLimits.CurrentBusinessCount < emptyLimits.MaxBusinesses))
            {
                <a asp-controller="Business" asp-action="AddBusiness" class="auth-btn auth-btn-cta">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add First Business
                </a>
            }
            else
            {
                <a asp-controller="Subscription" asp-action="Index" class="auth-btn auth-btn-secondary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                    </svg>
                    Upgrade to Add Business
                </a>
            }
        </div>
    }
</div>