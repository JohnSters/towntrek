@model TownTrek.Models.ViewModels.ClientDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Dashboard</h1>
            <p class="page-description">
                Welcome back, @(Model.User?.FirstName ?? "User")! Here's an overview of your business performance and account status.
                @if (Model.SubscriptionTier != null)
                {
                    <span class="subscription-badge">@Model.SubscriptionTier.DisplayName</span>
                }
            </p>
        </div>
        <div class="page-actions">
            @if (Model.CanAddBusiness)
            {
                <a href="@Url.Action("AddBusiness", "Client")" class="auth-btn auth-btn-cta">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Add New Business
                </a>
            }
            else
            {
                <a href="@Url.Action("Subscription", "Client")" class="auth-btn auth-btn-secondary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                    </svg>
                    Upgrade Plan
                </a>
            }
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.PaymentStatus) && Model.PaymentStatus != "Completed" && Model.PaymentStatus != "Active")
{
    <div class="alert alert-warning">
        <div class="alert-content">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
            <div>
                <strong>Payment Required</strong>
                <p>Your payment status is <strong>@Model.PaymentStatus</strong>. Please complete your payment to access all features.</p>
                @if (ViewBag.PaymentUrl != null)
                {
                    <a href="@ViewBag.PaymentUrl" class="alert-action">Complete Payment</a>
                }
            </div>
        </div>
    </div>
}

<!-- Stats Overview -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon primary">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.ActiveBusinesses</div>
        <div class="stat-label">Active Businesses</div>
        @if (Model.UserLimits != null)
        {
            <div class="stat-change">
                @Model.UserLimits.CurrentBusinessCount/@(Model.UserLimits.MaxBusinesses == -1 ? "âˆž" : Model.UserLimits.MaxBusinesses.ToString()) used
            </div>
        }
    </div>

    <div class="stat-card">
        <div class="stat-icon success">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
        </div>
        <div class="stat-value">@Model.TotalViews</div>
        <div class="stat-label">Total Views</div>
        <div class="stat-change positive">All time</div>
    </div>

    @if (Model.UserLimits != null)
    {
        <div class="stat-card">
            <div class="stat-icon info">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
            </div>
            <div class="stat-value">@Model.UserLimits.CurrentImageCount</div>
            <div class="stat-label">Images Used</div>
            <div class="stat-change">
                @(Model.UserLimits.MaxImages == -1 ? "Unlimited" : $"{Model.UserLimits.CurrentImageCount}/{Model.UserLimits.MaxImages}")
            </div>
        </div>
    }

    <div class="stat-card">
        <div class="stat-icon @(Model.PaymentStatus == "Completed" || Model.PaymentStatus == "Active" ? "success" : "danger")">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
        </div>
        <div class="stat-value">R@(Model.SubscriptionTier?.MonthlyPrice ?? 0)</div>
        <div class="stat-label">Monthly Plan</div>
        <div class="stat-change">@(Model.SubscriptionTier?.DisplayName ?? "No Plan")</div>
    </div>
</div>

<!-- Recent Activity -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Recent Activity</h3>
        <div class="admin-card-actions">
            <button class="header-btn" title="Refresh">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <div class="activity-list">
        <div class="activity-item">
            <div class="activity-icon success">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
            <div class="activity-content">
                <div class="activity-title">Account activated</div>
                <div class="activity-description">Welcome to TownTrek! Your @(Model.SubscriptionTier?.DisplayName ?? "account") is now active.</div>
                <div class="activity-time">@(Model.User?.CreatedAt.ToString("MMM dd, yyyy") ?? "Recently")</div>
            </div>
        </div>

        @if (Model.RecentBusinesses.Any())
        {
            @foreach (var business in Model.RecentBusinesses.Take(3))
            {
                <div class="activity-item">
                    <div class="activity-icon primary">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Business listing: @business.Name</div>
                        <div class="activity-description">Status: @business.Status | Views: @business.ViewCount</div>
                        <div class="activity-time">@business.CreatedAt.ToString("MMM dd, yyyy")</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="activity-item">
                <div class="activity-icon info">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="activity-content">
                    <div class="activity-title">Ready to get started?</div>
                    <div class="activity-description">Add your first business listing to begin connecting with customers.</div>
                    <div class="activity-time">
                        @if (Model.CanAddBusiness)
                        {
                            <a href="@Url.Action("AddBusiness", "Client")" class="text-primary">Add Business Now</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Subscription", "Client")" class="text-primary">Upgrade Plan</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Quick Actions -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Quick Actions</h3>
    </div>
    
    <div class="quick-actions-grid">
        @if (Model.CanAddBusiness)
        {
            <a href="@Url.Action("AddBusiness", "Client")" class="quick-action-card">
                <div class="quick-action-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <div class="quick-action-title">Add Business</div>
                <div class="quick-action-description">Create a new business listing</div>
            </a>
        }
        else
        {
            <div class="quick-action-card disabled" title="Upgrade your plan to add more businesses">
                <div class="quick-action-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                </div>
                <div class="quick-action-title">Add Business</div>
                <div class="quick-action-description">Upgrade to add more businesses</div>
            </div>
        }

        <a href="@Url.Action("ManageBusinesses", "Client")" class="quick-action-card">
            <div class="quick-action-icon">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
            </div>
            <div class="quick-action-title">Manage Listings</div>
            <div class="quick-action-description">Edit your business information</div>
        </a>

        <a href="@Url.Action("Support", "Client")" class="quick-action-card">
            <div class="quick-action-icon">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z"></path>
                </svg>
            </div>
            <div class="quick-action-title">
                @if (Model.HasDedicatedSupport)
                {
                    <span>Dedicated Support</span>
                }
                else if (Model.HasPrioritySupport)
                {
                    <span>Priority Support</span>
                }
                else
                {
                    <span>Basic Support</span>
                }
            </div>
            <div class="quick-action-description">Get help with your account</div>
        </a>

        @if (Model.HasAnalyticsAccess)
        {
            <a href="@Url.Action("Analytics", "Client")" class="quick-action-card">
                <div class="quick-action-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <div class="quick-action-title">Analytics</div>
                <div class="quick-action-description">View performance metrics</div>
            </a>
        }
        else
        {
            <div class="quick-action-card disabled" title="Upgrade to Standard or Premium plan for analytics">
                <div class="quick-action-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                </div>
                <div class="quick-action-title">Analytics</div>
                <div class="quick-action-description">Upgrade for analytics access</div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/client-admin.js" asp-append-version="true"></script>
}
   