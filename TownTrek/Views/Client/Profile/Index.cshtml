@model TownTrek.Models.ApplicationUser
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Profile Management</h1>
            <p class="page-description">Manage your account information and preferences.</p>
        </div>
        <div class="page-actions">
            <a href="@Url.Action("Settings", "Profile")" class="auth-btn auth-btn-secondary">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Settings
            </a>
        </div>
    </div>
</div>

<!-- Profile Overview -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Account Information</h3>
        <p class="admin-card-description">Your current account details and preferences</p>
    </div>
    
    @if (Model != null)
    {
        <div class="profile-info">
            <div class="profile-section">
                <h4>Personal Information</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <label>Full Name</label>
                        <span>@Model.FirstName @Model.LastName</span>
                    </div>
                    <div class="info-item">
                        <label>Email Address</label>
                        <span>@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <label>Username</label>
                        <span>@Model.UserName</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Location))
                    {
                        <div class="info-item">
                            <label>Location</label>
                            <span>@Model.Location</span>
                        </div>
                    }
                    <div class="info-item">
                        <label>Account Created</label>
                        <span>@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="info-item">
                            <label>Last Login</label>
                            <span>@Model.LastLoginAt.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                        </div>
                    }
                </div>
            </div>
            
            <div class="profile-section">
                <h4>Account Status</h4>
                <div class="status-info">
                    <div class="status-item">
                        <span class="status-badge status-active">Active</span>
                        <span>Your account is active and in good standing</span>
                    </div>
                </div>
            </div>
            
            <div class="profile-actions">
                <a href="@Url.Action("Edit", "Profile")" class="auth-btn auth-btn-primary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Profile
                </a>
                <a href="@Url.Action("Billing", "Subscription")" class="auth-btn auth-btn-secondary">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                    </svg>
                    Billing & Payment
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
            </div>
            <h3>Profile Information Unavailable</h3>
            <p>Unable to load your profile information. Please try refreshing the page or contact support if the issue persists.</p>
        </div>
    }
</div>
