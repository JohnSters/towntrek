@model TownTrek.Models.BusinessCategory
@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Edit Category</h3>
    </div>

    <form method="post" action="@Url.Action("Edit", new { id = Model.Id })" class="admin-form">
        @Html.AntiForgeryToken()

        <div class="form-grid">
            <div class="form-group">
                <label class="form-label">Key (immutable)</label>
                <input class="form-input" value="@Model.Key" disabled />
            </div>
            <div class="form-group">
                <label class="form-label required">Name</label>
                <input asp-for="Name" class="form-input" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>
            <div class="form-group">
                <label class="form-label">Description</label>
                <input asp-for="Description" class="form-input" />
            </div>
            <div class="form-group">
                <label class="form-label">Icon class</label>
                <input asp-for="IconClass" class="form-input" />
            </div>
            <div class="form-group">
                <label class="form-label">Form Type</label>
                <select asp-for="FormType" class="form-select" asp-items="Html.GetEnumSelectList<TownTrek.Models.BusinessFormType>()"></select>
            </div>
            <div class="form-group">
                <label class="form-label">Active</label>
                <input asp-for="IsActive" type="checkbox" class="form-checkbox" />
            </div>
        </div>

        <div class="form-actions">
            <a href="@Url.Action("Index")" class="auth-btn auth-btn-secondary">Back</a>
            <button type="submit" class="auth-btn auth-btn-cta">Save Changes</button>
        </div>
    </form>
</div>


