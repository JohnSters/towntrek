<!-- Recent Client Messages -->
@if (Model.RecentMessages?.Any() == true)
{
    <div class="admin-card" style="margin-bottom: 2rem;">
        <div class="admin-card-header">
            <h3 class="admin-card-title">Recent Client Messages</h3>
            <div class="admin-card-actions">
                <a href="@Url.Action("Index", "AdminMessages")" class="header-btn" title="View All Messages">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                </a>
            </div>
        </div>
        
        <div class="activity-list">
            @foreach (var message in Model.RecentMessages.Take(5))
            {
                <div class="activity-item">
                    <div class="activity-icon @GetMessageIconClass(message.Priority)">
                        <i class="@message.Topic.IconClass"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">
                            @message.Subject
                            <span class="badge badge-@GetMessageStatusClass(message.Status)">@message.Status</span>
                        </div>
                        <div class="activity-description">
                            <strong>From:</strong> @message.User.Email - @message.Topic.Name
                        </div>
                        <div class="activity-time">
                            @((DateTime.UtcNow - message.CreatedAt).TotalHours < 1 ? 
                                $"{(int)(DateTime.UtcNow - message.CreatedAt).TotalMinutes} minutes ago" : 
                                $"{(int)(DateTime.UtcNow - message.CreatedAt).TotalHours} hours ago")
                        </div>
                    </div>
                    <div class="activity-actions">
                        <a href="@Url.Action("Details", "AdminMessages", new { id = message.Id })" class="table-action-btn" title="View Details">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Recent Activity -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Recent System Activity</h3>
        <div class="admin-card-actions">
            <button class="header-btn" title="Refresh">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </button>
        </div>
    </div>
    
    <div class="activity-list">
        @if (Model.RecentErrors?.Any() == true)
        {
            @foreach (var error in Model.RecentErrors.Take(3))
            {
                <div class="activity-item">
                    <div class="activity-icon @(error.Severity == "Critical" ? "danger" : error.Severity == "Error" ? "warning" : "info")">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">@error.Severity @error.ErrorType Error</div>
                        <div class="activity-description">@error.Message</div>
                        <div class="activity-time">@((DateTime.UtcNow - error.Timestamp).TotalHours < 1 ? 
                            $"{(int)(DateTime.UtcNow - error.Timestamp).TotalMinutes} minutes ago" : 
                            $"{(int)(DateTime.UtcNow - error.Timestamp).TotalHours} hours ago")</div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="activity-item">
                <div class="activity-icon success">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="activity-content">
                    <div class="activity-title">System Running Smoothly</div>
                    <div class="activity-description">No recent critical errors detected</div>
                    <div class="activity-time">Last 24 hours</div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    private string GetMessageIconClass(string priority)
    {
        return priority.ToLower() switch
        {
            "critical" => "danger",
            "high" => "danger",
            "medium" => "warning",
            "low" => "info",
            _ => "info"
        };
    }
    
    private string GetMessageStatusClass(string status)
    {
        return status.ToLower() switch
        {
            "open" => "info",
            "inprogress" => "warning",
            "resolved" => "success",
            "closed" => "secondary",
            _ => "secondary"
        };
    }
}