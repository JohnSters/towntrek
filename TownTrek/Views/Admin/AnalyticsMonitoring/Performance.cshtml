@model TownTrek.Models.ViewModels.AnalyticsPerformanceViewModel
@{
    ViewData["Title"] = "Analytics Performance Monitoring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content">
        <div>
            <h1 class="page-title">Analytics Performance Monitoring</h1>
            <p class="page-description">Detailed performance metrics and analysis for the analytics system.</p>
        </div>
    </div>
</div>

<!-- Performance Overview -->
<div class="admin-card">
    <div class="admin-card-header">
        <h3 class="admin-card-title">Performance Overview</h3>
    </div>
    <div class="admin-card-content">
        <p>Performance monitoring details will be displayed here.</p>
        <p>This includes:</p>
        <ul>
            <li>Page load times</li>
            <li>Database query performance</li>
            <li>Chart rendering times</li>
            <li>User engagement metrics</li>
        </ul>
    </div>
</div>

<!-- Back to Dashboard -->
<div style="margin-top: 2rem;">
    <a href="@Url.Action("Dashboard", "AnalyticsMonitoring")" class="auth-btn auth-btn-secondary">
        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Analytics Dashboard
    </a>
</div>
