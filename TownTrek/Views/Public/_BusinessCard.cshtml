@model TownTrek.Models.ViewModels.BusinessCardViewModel

<div class="business-card" data-business-id="@Model.Id">
    <div class="business-card-header">
        @if (!string.IsNullOrEmpty(Model.LogoUrl))
        {
            <img src="@Model.LogoUrl" alt="@Model.Name logo" class="business-logo" />
        }
        else
        {
            <div class="business-logo-placeholder">
                <span>@Model.Name.Substring(0, 1).ToUpper()</span>
            </div>
        }
        
        <div class="business-badges">
            @if (Model.IsFeatured)
            {
                <span class="badge badge-featured">Featured</span>
            }
            @if (Model.IsVerified)
            {
                <span class="badge badge-verified">
                    <svg width="14" height="14" fill="currentColor" viewBox="0 0 23 23">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                    Verified
                </span>
            }
        </div>
        
        @if (User.Identity?.IsAuthenticated == true)
        {
            <button class="favorite-btn" data-public-action="toggle-favorite" data-business-id="@Model.Id" title="@(Model.IsUserFavorite ? "Remove from favorites" : "Add to favorites")">
                <svg width="20" height="20" fill="@(Model.IsUserFavorite ? "currentColor" : "none")" stroke="currentColor" viewBox="0 0 23 23">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
            </button>
        }
    </div>
    
    <div class="business-card-content">
        <h3 class="business-name">
            <a href="@Url.Action("BusinessDetails", "Public", new { businessId = Model.Id })">
                @Model.Name
            </a>
        </h3>
        
        <div class="business-category">
            <span class="category-main">@Model.Category</span>
            @if (!string.IsNullOrEmpty(Model.SubCategory))
            {
                <span class="category-sub">â€¢ @Model.SubCategory</span>
            }
        </div>
        
        @if (Model.Rating.HasValue)
        {
            <div class="business-rating">
                <div class="rating-stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        @if (i <= Model.Rating.Value)
                        {
                            <svg class="star filled" width="16" height="16" fill="currentColor" viewBox="0 0 23 23">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                        }
                        else
                        {
                            <svg class="star" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                        }
                    }
                </div>
                <span class="rating-value">@Model.Rating.Value.ToString("F1")</span>
                <span class="rating-count">(@Model.TotalReviews)</span>
            </div>
        }
        
        @if (!string.IsNullOrEmpty(Model.ShortDescription))
        {
            <p class="business-description">@Model.ShortDescription</p>
        }
        
        <div class="business-location">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>@Model.TownName</span>
        </div>
        
        @if (Model.Services.Any())
        {
            <div class="business-services">
                @foreach (var service in Model.Services.Take(3))
                {
                    <span class="service-tag">@service.ServiceName</span>
                }
                @if (Model.Services.Count > 3)
                {
                    <span class="service-more">+@(Model.Services.Count - 3) more</span>
                }
            </div>
        }
    </div>
    
    <div class="business-card-footer">
        <div class="business-contact">
            <a href="tel:@Model.PhoneNumber" class="contact-btn phone-btn" title="Call @Model.Name">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
            </a>
            
            @if (!string.IsNullOrEmpty(Model.EmailAddress))
            {
                <a href="mailto:@Model.EmailAddress" class="contact-btn email-btn" title="Email @Model.Name">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                </a>
            }
            
            @if (!string.IsNullOrEmpty(Model.Website))
            {
                <a href="@Model.Website" target="_blank" class="contact-btn website-btn" title="Visit website">
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                    </svg>
                </a>
            }
        </div>
        
        <a href="@Url.Action("BusinessDetails", "Public", new { businessId = Model.Id })" class="view-details-btn">
            View Details
        </a>
    </div>
</div>
