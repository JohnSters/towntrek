@model dynamic

@{
    ViewData["Title"] = "Shared Dashboard Error";
    Layout = "_Layout";
}

<div class="shared-dashboard-error">
    <div class="error-container">
        <div class="error-icon">
            <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
        </div>
        
        <h1>Dashboard Not Available</h1>
        <p class="error-message">@Model.message</p>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary">Go to TownTrek Home</a>
            <a href="/Auth/Login" class="btn btn-secondary">Sign In</a>
        </div>
        
        <div class="error-info">
            <p>If you believe this is an error, please contact the person who shared this link with you.</p>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/features/public/shared-dashboard.css" asp-append-version="true" />
}
