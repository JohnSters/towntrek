@model TownTrek.Models.ViewModels.BusinessSearchViewModel
@{
    ViewData["Title"] = "Discover Local Businesses";
    Layout = "_Layout";
}

<div class="public-dashboard-page">
    <!-- Hero Section with Integrated Search -->
    <section class="hero-section" style="background: linear-gradient(135deg, var(--lapis-lazuli) 0%, var(--carolina-blue) 100%); color: white; padding: 4rem 0; margin-bottom: 4rem;">
        <div class="container">
            <div class="hero-content" style="text-align: center; max-width: 600px; margin: 0 auto;">
                <h1 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 1rem; color: white;">
                    Discover Local Businesses
                </h1>
                <p style="font-size: 1.25rem; margin-bottom: 2rem; opacity: 0.9;">
                    Find amazing shops, restaurants, services, and experiences across South Africa's vibrant towns
                </p>
                
                <!-- Integrated Search Form -->
                <form asp-action="Search" method="get" class="hero-search-form" style="margin-bottom: 1.5rem;">
                    <div class="search-input-group" style="display: flex; max-width: 500px; margin: 0 auto; background: white; border-radius: 50px; padding: 8px; box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                        <input type="text" name="search" placeholder="Search for businesses, services, or locations..." 
                               class="search-input" style="flex: 1; border: none; padding: 12px 20px; font-size: 1rem; background: transparent; outline: none;" />
                        <button type="submit" class="search-btn" style="background: var(--hunyadi-yellow); border: none; border-radius: 50px; padding: 12px 20px; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                            <svg width="20" height="20" fill="none" stroke="var(--charcoal)" viewBox="0 0 23 23" stroke-width="2">
                                <circle cx="11" cy="11" r="8"/>
                                <path d="m21 21-4.35-4.35"/>
                            </svg>
                        </button>
                    </div>
                </form>
                
                <div style="margin-top: 1rem;">
                    <a href="@Url.Action("Search", "Public")" class="browse-all-btn">
                        <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 23 23" stroke-width="2">
                            <path d="M3 7h18M3 12h18M3 17h18"/>
                        </svg>
                        Browse All Businesses
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Categories -->
    <section class="categories-section" style="margin-bottom: 4rem;">
        <div class="container">
            <div class="section-header" style="text-align: center; margin-bottom: 3rem;">
                <h2 style="font-size: 2rem; font-weight: 600; color: var(--charcoal); margin-bottom: 0.5rem;">
                    Browse by Category
                </h2>
                <p style="font-size: 1.1rem; color: var(--dark-gray);">
                    Explore businesses by what you're looking for
                </p>
            </div>
            
            <div class="category-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
                @foreach (var category in Model.AvailableCategories.Take(6))
                {
                    <a href="@Url.Action("Search", "Public", new { category = category.Key })" 
                       class="category-card" 
                       style="display: block; background: white; border: 1px solid var(--medium-gray); border-radius: 12px; padding: 2rem; text-align: center; text-decoration: none; color: inherit; transition: all 0.3s ease; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                        <div class="category-icon" style="width: 60px; height: 60px; background: var(--light-gray); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 2rem;">
                            @{
                                string categoryIcon = category.Key.ToLower() switch
                                {
                                    "restaurants-food" => "🍽️",
                                    "shops-retail" => "🛍️", 
                                    "accommodation" => "🏨",
                                    "tours-experiences" => "🗺️",
                                    "events" => "🎉",
                                    "markets-vendors" => "🏪",
                                    _ => category.Name.Substring(0, 1)
                                };
                            }
                            @if (!string.IsNullOrEmpty(category.IconClass))
                            {
                                <i class="@category.IconClass" style="color: var(--lapis-lazuli);"></i>
                            }
                            else
                            {
                                <span style="font-weight: 600; color: var(--charcoal);">@categoryIcon</span>
                            }
                        </div>
                        <h3 style="font-size: 1.25rem; font-weight: 600; color: var(--charcoal); margin-bottom: 0.5rem;">
                            @category.Name
                        </h3>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p style="font-size: 0.9rem; color: var(--dark-gray); margin: 0; line-height: 1.4;">
                                @category.Description
                            </p>
                        }
                    </a>
                }
            </div>
        </div>
    </section>

    <!-- Featured Businesses -->
    @if (Model.HasResults)
    {
        <section class="featured-businesses-section" style="background: var(--light-gray); padding: 4rem 0; margin-bottom: 0;">
            <div class="container">
                <div class="section-header" style="text-align: center; margin-bottom: 3rem;">
                    <h2 style="font-size: 2rem; font-weight: 600; color: var(--charcoal); margin-bottom: 0.5rem;">
                        Featured Businesses
                    </h2>
                    <p style="font-size: 1.1rem; color: var(--dark-gray);">
                        Discover some of the amazing businesses in our community
                    </p>
                </div>
                
                <div class="business-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
                    @foreach (var business in Model.Results.Take(6))
                    {
                        @await Html.PartialAsync("_BusinessCard", business)
                    }
                </div>
                
                <div class="text-center">
                    <a href="@Url.Action("Search", "Public")" class="btn btn-primary btn-lg">
                        Explore All Businesses
                    </a>
                </div>
            </div>
        </section>
    }
    else
    {
        <!-- Call to Action when no featured businesses -->
        <section class="cta-section" style="background: var(--light-gray); padding: 4rem 0; text-align: center;">
            <div class="container">
                <h2 style="font-size: 2rem; font-weight: 600; color: var(--charcoal); margin-bottom: 1rem;">
                    Ready to Explore?
                </h2>
                <p style="font-size: 1.1rem; color: var(--dark-gray); margin-bottom: 2rem;">
                    Start discovering amazing local businesses in South African towns
                </p>
                <a href="@Url.Action("Search", "Public")" class="btn btn-primary btn-lg">
                    Start Exploring
                </a>
            </div>
        </section>
    }
</div>

<!-- Hidden data for JavaScript -->
<div id="searchPageData" class="d-none"
     data-selected-subcategory='@Model.SubCategory'
     data-categories='@Json.Serialize(Model.AvailableCategories.Select(c => new { key = c.Key, name = c.Name, subCategories = c.SubCategories.Select(sc => new { key = sc.Key, name = sc.Name }) }))'>
</div>

@section Scripts {
    <script src="~/js/modules/public/public-manager.js" asp-append-version="true"></script>
    <script>
        document.body.dataset.page = 'public-dashboard';
    </script>
}