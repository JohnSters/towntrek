@model TownTrek.Models.ViewModels.HomeStatsViewModel
@{
    ViewData["Title"] = "TownTrek - South African Small Business Gateway";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1 class="hero-title">Discover Local Businesses in South African Towns</h1>
        <p class="hero-subtitle">
            TownTrek connects you with local shops, restaurants, markets, and services across South Africa's vibrant small towns. 
            Find what you need, when you need it.
        </p>
        <div class="flex justify-center" style="gap: 1rem; flex-wrap: wrap;">
            <a href="@Url.Action("Index", "Public")" class="btn btn-cta btn-lg">Explore Businesses</a>
            <a href="#business-owners" class="btn btn-secondary btn-lg">List Your Business</a>
        </div>
    </div>
    </section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="grid grid-3">
            <div class="stat-item">
                <span class="stat-number">@Model.TotalBusinesses.ToString("N0")+</span>
                <span class="stat-label">Local Businesses</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.TotalTowns.ToString("N0")+</span>
                <span class="stat-label">South African Towns</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.TotalHappyCustomers.ToString("N0")+</span>
                <span class="stat-label">Happy Customers</span>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section">
    <div class="container">
        <div class="text-center" style="margin-bottom: 3rem;">
            <h2>Everything You Need to Discover Local Businesses</h2>
            <p class="text-large">From shops and restaurants to tours and events, find it all in one place</p>
        </div>
        
        <div class="grid grid-3">
            <div class="card feature-card">
                <div class="feature-icon">üè™</div>
                <h3>Shops & Retail</h3>
                <p>Discover local stores, their specialties, operating hours, and contact information. Find unique products and support local businesses.</p>
            </div>
            
            <div class="card feature-card">
                <div class="feature-icon">üçΩÔ∏è</div>
                <h3>Restaurants & Food</h3>
                <p>Browse menus, check operating hours, and find contact details for reservations. Discover local cuisine and dining experiences.</p>
            </div>
            
            <div class="card feature-card">
                <div class="feature-icon">üè™</div>
                <h3>Markets & Vendors</h3>
                <p>Find local markets, vendor listings, and special events. Connect with community markets and local producers.</p>
            </div>
            
            <div class="card feature-card">
                <div class="feature-icon">üè®</div>
                <h3>Accommodation</h3>
                <p>Explore local accommodation options with detailed information about amenities, pricing, and booking contacts.</p>
            </div>
            
            <div class="card feature-card">
                <div class="feature-icon">üó∫Ô∏è</div>
                <h3>Tours & Experiences</h3>
                <p>Discover local tours, experiences, and attractions. Get detailed itineraries and contact information for bookings.</p>
            </div>
            
            <div class="card feature-card">
                <div class="feature-icon">üéâ</div>
                <h3>Events</h3>
                <p>Stay updated with local events, festivals, and community gatherings. Never miss what's happening in your town.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section style="padding: 4rem 0; background-color: white;">
    <div class="container">
        <div class="text-center" style="margin-bottom: 3rem;">
            <h2>How TownTrek Works</h2>
            <p class="text-large">Simple, fast, and designed for South African communities</p>
        </div>
        
        <div class="grid grid-3">
            <div class="text-center">
                <div class="feature-icon" style="background-color: var(--hunyadi-yellow); color: var(--charcoal);">1</div>
                <h4>Search & Discover</h4>
                <p>Use our mobile app or website to find businesses in your town or any South African community you're visiting.</p>
            </div>
            
            <div class="text-center">
                <div class="feature-icon" style="background-color: var(--hunyadi-yellow); color: var(--charcoal);">2</div>
                <h4>Get Information</h4>
                <p>Access detailed business information including contact details, operating hours, menus, and special offers.</p>
            </div>
            
            <div class="text-center">
                <div class="feature-icon" style="background-color: var(--hunyadi-yellow); color: var(--charcoal);">3</div>
                <h4>Connect & Visit</h4>
                <p>Contact businesses directly, get directions, and visit local establishments to support your community.</p>
            </div>
        </div>
    </div>
</section>

<!-- Business Owners Section -->
<section id="business-owners" style="padding: 4rem 0; background-color: var(--light-gray);">
    <div class="container">
        <div class="grid grid-2" style="align-items: center; gap: 3rem;">
            <div>
                <h2>For Business Owners</h2>
                <p class="text-large">Take control of your business presence and reach more customers in your community.</p>
                
                <div style="margin: 2rem 0;">
                    <div style="margin-bottom: 1rem;">
                        <h4 style="color: var(--lapis-lazuli); margin-bottom: 0.5rem;">‚úì Easy Content Management</h4>
                        <p>Update your business information, upload photos, and manage your listing with our simple web portal.</p>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <h4 style="color: var(--lapis-lazuli); margin-bottom: 0.5rem;">‚úì Mobile-First Visibility</h4>
                        <p>Your business appears in our dedicated mobile app, making it easy for customers to find you.</p>
                    </div>
                    
                    <div style="margin-bottom: 1rem;">
                        <h4 style="color: var(--lapis-lazuli); margin-bottom: 0.5rem;">‚úì South African Payment Options</h4>
                        <p>Pay with local payment methods including EFT, credit cards, and mobile payments.</p>
                    </div>
                </div>
                
                <a href="#pricing" class="btn btn-primary btn-lg">View Pricing Plans</a>
            </div>
            
            <div class="card-featured">
                <h3>Start Your 30-Day Trial</h3>
                <p>Try TownTrek for 30 days with limited access to business features. No credit card required.</p>
                <ul style="text-align: left; margin: 1.5rem 0;">
                    <li>1 business listing</li>
                    <li>5 photo uploads</li>
                    <li>Basic business information</li>
                    <li>Mobile app visibility</li>
                    <li>Standard support</li>
                </ul>
                <a asp-controller="Auth" asp-action="Register" class="btn btn-cta btn-lg" style="width: 100%;">Start Trial</a>
            </div>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section id="pricing" style="padding: 4rem 0; background-color: white;">
    <div class="container">
        <div class="text-center" style="margin-bottom: 3rem;">
            <h2>Simple, Transparent Pricing</h2>
            <p class="text-large">Choose the plan that fits your business needs</p>
        </div>
        
        <div class="grid grid-3">
            <div class="card">
                <h3>Basic</h3>
                <div style="margin: 1rem 0;">
                    <span style="font-size: 2rem; font-weight: bold; color: var(--lapis-lazuli);">R199</span>
                    <span style="color: var(--dark-gray);">/month</span>
                </div>
                <ul style="text-align: left; margin: 1.5rem 0;">
                    <li>1 business listing</li>
                    <li>Basic information management</li>
                    <li>5 image uploads</li>
                    <li>Standard support</li>
                </ul>
                <a asp-controller="Auth" asp-action="Register" asp-route-plan="basic" class="btn btn-secondary" style="width: 100%;">Choose Basic</a>
            </div>
            
            <div class="card-featured">
                <div style="background-color: var(--hunyadi-yellow); color: var(--charcoal); padding: 0.5rem; border-radius: var(--radius-md); margin-bottom: 1rem; font-weight: bold; text-align: center;">
                    Most Popular
                </div>
                <h3>Standard</h3>
                <div style="margin: 1rem 0;">
                    <span style="font-size: 2rem; font-weight: bold; color: var(--lapis-lazuli);">R399</span>
                    <span style="color: var(--dark-gray);">/month</span>
                </div>
                <ul style="text-align: left; margin: 1.5rem 0;">
                    <li>3 business listings</li>
                    <li>Advanced information management</li>
                    <li>15 image uploads</li>
                    <li>PDF document uploads</li>
                    <li>Priority support</li>
                    <li>Basic analytics</li>
                </ul>
                <a asp-controller="Auth" asp-action="Register" asp-route-plan="standard" class="btn btn-cta" style="width: 100%;">Choose Standard</a>
            </div>
            
            <div class="card">
                <h3>Premium</h3>
                <div style="margin: 1rem 0;">
                    <span style="font-size: 2rem; font-weight: bold; color: var(--lapis-lazuli);">R599</span>
                    <span style="color: var(--dark-gray);">/month</span>
                </div>
                <ul style="text-align: left; margin: 1.5rem 0;">
                    <li>10 business listings</li>
                    <li>Full feature access</li>
                    <li>Unlimited image uploads</li>
                    <li>Advanced analytics</li>
                    <li>Featured placement</li>
                    <li>Dedicated support</li>
                </ul>
                <a asp-controller="Auth" asp-action="Register" asp-route-plan="premium" class="btn btn-secondary" style="width: 100%;">Choose Premium</a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <h2 class="cta-title">Ready to Connect with Your Community?</h2>
        <p style="font-size: var(--body-large); margin-bottom: 2rem; opacity: 0.9;">
            Join thousands of South Africans discovering and supporting local businesses
        </p>
        <div class="flex justify-center" style="gap: 1rem; flex-wrap: wrap;">
            <a asp-controller="Home" asp-action="Download" class="btn btn-cta btn-lg">Download Mobile App</a>
            <a asp-controller="Auth" asp-action="Register" class="btn btn-secondary btn-lg">List Your Business</a>
        </div>
    </div>
</section>


