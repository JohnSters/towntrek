@*
  Minimal inline styles, consistent with design system colors/spacing.
  No external CSS/JS to keep emails rendering reliably across clients.
*@
@{
	Layout = null;
}
<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width,initial-scale=1" />
	<title>@ViewData["Subject"]</title>
</head>
<body style="margin:0;padding:0;background-color:#f8f9fa;font-family: Inter, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;color:#2f4858;">
	<table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="background-color:#f8f9fa;padding:24px;">
		<tr>
			<td align="center">
				<table role="presentation" cellpadding="0" cellspacing="0" width="100%" style="max-width:640px;background:#ffffff;border:1px solid #e9ecef;border-radius:12px;padding:24px;">
					<tr>
						<td style="padding-bottom:16px;border-bottom:1px solid #e9ecef;">
							<h1 style="font-size:20px;margin:0;color:#2f4858;">TownTrek</h1>
						</td>
					</tr>
					<tr>
						<td style="padding-top:16px;">
							@RenderBody()
						</td>
					</tr>
					<tr>
						<td style="padding-top:24px;border-top:1px solid #e9ecef;color:#6c757d;font-size:12px;">
							<p style="margin:0;">This is an automated message from TownTrek. Please do not reply.</p>
						</td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</body>
</html>


