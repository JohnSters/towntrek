{
  "PayFast": {
    "MerchantId": "YOUR_PRODUCTION_MERCHANT_ID",
    "MerchantKey": "YOUR_PRODUCTION_MERCHANT_KEY",
    "PassPhrase": "YOUR_PRODUCTION_PASSPHRASE",
    "PaymentUrl": "https://www.payfast.co.za/eng/process",
    "UseSandbox": false
  },
  "BaseUrl": "https://yourdomain.com",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "TownTrek": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "TownTrek": "Information",
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/towntrek-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Email": {
    "Host": "",
    "Port": 587,
    "Username": "",
    "Password": "",
    "FromName": "TownTrek",
    "FromAddress": "no-reply@yourdomain.com",
    "UseStartTls": true,
    "UseSsl": false,
    "SkipCertificateValidation": false
  }
}